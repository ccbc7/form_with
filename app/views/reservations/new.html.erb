<h1>予約画面</h1>

<%= form_with url: "/reservations/confirm" do |form| %>

  <h3>フォーム内容</h3>
  <table>
    <tr>
      <th>
        <%= form.label :room_name ,"ルームネーム" %>
      </th>
      <td>
        <%= form.text_field :room_name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :start_day ,"開始日" %>
      </th>
      <td>
        <%= form.date_field :start_day %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :"終了日" %>
      </th>
      <td>
        <%= form.date_field :end_day%>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :adress ,"住所" %>
      </th>
      <td>
        <%= form.text_field :adress %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :people ,"人数" %>
      </th>
      <td>
        <%= form.number_field :people %>
      </td>
    </tr>
    <tr>
      <th>
        <%= form.label :charge ,"日額" %>
      </th>
      <td>
        <%= form.number_field :charge %>
      </td>
    </tr>
  </table>
  <%= form.submit "確認画面へ" %>
    <% end %>


